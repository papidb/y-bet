generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite"
}

// schema.prisma

model Game {
  id            String @id @default(cuid())
  homeTeam      String
  awayTeam      String
  homeScore     Int
  awayScore     Int
  remainingTime String
  odds          Odds   @relation(fields: [oddsId], references: [id])
  oddsId        String @unique
  bets          Bet[]
}

model Odds {
  id   String @id @default(cuid())
  home Float
  away Float
  draw Float
  Game Game?
}

model Bet {
  id     String @id @default(cuid())
  gameId String
  amount Float
  type   String
  game   Game   @relation(fields: [gameId], references: [id])
}

